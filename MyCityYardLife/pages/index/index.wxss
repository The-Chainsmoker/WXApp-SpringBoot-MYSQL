.title {
  padding: 15rpx 0;
  text-align: center;
  background-color: #91cdf6;
  color: #fff;
}

.banners {
  width: 100%;
  height: 300rpx;

}

.banners image {
  width: 100%;
  height: 100%;
}

.article {
  padding-top: 20rpx;
  padding-right: 10rpx;
  height: calc(100vh - 398rpx);
  width: 100%;
  margin: 0 4rpx;
}

.article text {
  font-size: 43rpx;
  font-weight: bold;
  text-align: center;
  display: block;
}

.article view {
  text-indent: 2em;
}